var win = Ti.UI.createWindow({
	backgroundColor : "White",
	layout: "vertical",
	fullscreen: true
});


var state = Ti.UI.createLabel({
	color : "#8093DF",
	top : 0

});
var condition = Ti.UI.createLabel({
	color : "#8093DF",
	top : 0

});
var Fah = Ti.UI.createLabel({
	color : "#8093DF",
	top : 0

});
var Cel = Ti.UI.createLabel({
	color : "8093DF",
	top : 0

});
var wMph = Ti.UI.createLabel({
	color : "8093DF",
	top : 0

});
var wTemp = Ti.UI.createLabel({
	color : "8093DF",
	top : 580

});
var cView = Ti.UI.createView({
	height : 100,
	width : "100%",
	top : 0,
	backgroundColor : "#FFFF33",
	opacity : 0.5

});

var sView = Ti.UI.createView({
	height : 80,
	width : "100%",
	top : 0,
	backgroundColor : "#FFF233",
	opacity : 0.5
});

var conView = Ti.UI.createView({
	height : 80,
	width : "100%",
	top : 0,
	backgroundColor : "#FFDE33",
	opacity : 0.5
});

var fView = Ti.UI.createView({
	height : 80,
	width : "100%",
	top : 0,
	backgroundColor : "#FFC333",
	opacity : 0.5
});

var celView = Ti.UI.createView({
	height : 80,
	width : "100%",
	top : 0,
	backgroundColor : "#FFA733",
	opacity : 0.5
});

var wmView = Ti.UI.createView({
	height : 80,
	width : "100%",
	top : 0,
	backgroundColor : "#FF9333",
	opacity : 0.5
});

var wtView = Ti.UI.createView({
	height : 80,
	width : "100%",
	top : 0,
	backgroundColor : "#FF6A33",
	opacity : 0.5

});
var city = Ti.UI.createLabel({
	color : "#8093DF",
	top : 0,
	fontSize: 24,
});

var lat2 = Ti.UI.createLabel({
	color : "Black"
});
var lng2 = Ti.UI.createLabel({
	color : "Black"

});

var buildUi = function(obj) {
	console.log(obj);
	city.text = "F: " + obj.Fahrenheit;
	state.text =  obj.State;
	condition.text =  "Overcast";
	Fah.text = obj.City;
	Cel.text = "C: " + obj.Celsius;
	wMph.text = "Wind Mph: " + obj.WindMph;
	wTemp.text = "Wind Temperature: " + obj.WindTemp;
	cView.add(city);
	win.add(wTemp);
	win.add(state);
	win.add(condition);
	win.add(Fah);
	win.add(Cel);
	win.add(wMph);
	win.open();
};

var ltlng = function(arg1, arg2) {
	console.log(arg1);
	console.log(arg2);
	lat2.text = arg1;
	lng2.text = arg2;

};
win.add(cView);
win.add(sView);
win.add(conView);
win.add(fView);
win.add(celView);
win.add(wmView);
win.add(wtView);
;


exports.ltlng = ltlng;
exports.buildUi = buildUi; 