var win = Ti.UI.createWindow({
	backgroundColor : "White",
	layout: "vertical",
});


var fah = Ti.UI.createLabel({
	color : "Black",
	top : 10,
	textAlign: "center"

});
var con = Ti.UI.createLabel({
	color : "Black",
	top : 0,
	textAlign: "center"

});

var Cel = Ti.UI.createLabel({
	color : "Black",
	top : 0,
	textAlign: "center"

});
var wMph = Ti.UI.createLabel({
	color : "Black",
	top : 0,
	textAlign: "center"

});
var wTemp = Ti.UI.createLabel({
	color : "Black",
	top : 0,
	textAlign: "center"

});

var csLabel = Ti.UI.createLabel({
	color: "Black",
	top: 0,
	textAlign: "center"
	
});

var weView = Ti.UI.createImageView({
	image: "weather",
	height: 40,
	width: 40
	
});
var fView = Ti.UI.createView({
	height : "30%",
	width : "100%",
	top : 0,
	backgroundColor : "#FFFF33",
	opacity : 0.7,

});

var conView = Ti.UI.createView({
	height : "10%",
	width : "100%",
	top : 0,
	backgroundColor : "#FFC333",
	opacity : 0.7
});

var csView = Ti.UI.createView({
	height : "10%",
	width : "100%",
	top : 0,
	backgroundColor : "#FFDE33",
	opacity : 0.7
});

var celView = Ti.UI.createView({
	height : "10%",
	width : "100%",
	top : 0,
	backgroundColor : "#FFA733",
	opacity : 0.7
});

var wmView = Ti.UI.createView({
	height : "10%",
	width : "100%",
	top : 0,
	backgroundColor : "#FF9333",
	opacity : 0.7
});

var wtView = Ti.UI.createView({
	height : "10%",
	width : "100%",
	top : 0,
	backgroundColor : "#FF6A33",
	opacity : 0.7

});
var city = Ti.UI.createLabel({
	color : "Black",
	top : 0,
	fontSize: 24,
});

var lat2 = Ti.UI.createLabel({
	color : "Black"
});
var lng2 = Ti.UI.createLabel({
	color : "Black"

});

var buildUi = function(obj) {
	console.log(obj);
	csLabel.text = obj.City + ", " + obj.State;
	con.text =  "Overcast";
	fah.text = "F: " + obj.Fahrenheit;
	Cel.text = "C: " + obj.Celsius;
	wMph.text = "Wind Mph: " + obj.WindMph;
	wTemp.text = "Wind Temperature: " + obj.WindTemp;
	
	csView.add(csLabel);
	wtView.add(wTemp);
	conView.add(con);
	fView.add(fah);
	celView.add(Cel);
	wmView.add(wMph);
	win.open();
};

var ltlng = function(arg1, arg2) {
	console.log(arg1);
	console.log(arg2);
	lat2.text = arg1;
	lng2.text = arg2;

};
win.add(fView);
win.add(csView);
win.add(conView);
win.add(celView);
win.add(wmView);
win.add(wtView);
win.add(weView);
exports.ltlng = ltlng;
exports.buildUi = buildUi; 