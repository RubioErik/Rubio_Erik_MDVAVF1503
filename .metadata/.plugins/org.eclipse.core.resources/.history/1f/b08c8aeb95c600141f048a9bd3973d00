var buildUI = function(dbOutput) {
	for (i=0, j=dbOutput.length; i < j; i++){
		
	var ay = Ti.UI.createLabel({
	color: "black",
	left: 0,
	top: 25,
	text: "Day: " + dbOutput[i].title
	
});
	var fah = Ti.UI.createLabel({
	color: "black",
	right: 0,
	top: 25,
	text: "F: " + dbOutput[i].fah
	
});
	win.add(fah);
	win.add(day);
	}
	
	
};
