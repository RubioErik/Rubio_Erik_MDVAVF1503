var getGeo = function() {
	console.log("getGeo");
	Ti.Geolocation.purpose = "Current location needed to update your weather";
	Ti.Geolocation.getCurrentPosition(function(e){
		var UIR = require("ui");
		console.log(e);
		if (Ti.Platform.osname === "android") {
			var lat = "37.78583526611328";
			var lng = "-122.4064178466797";
			UIR.buildUI(lat, lng);
		} else {
			var lat = e.coords.latitude;
			var lng = e.coords.longitude;
			console.log("others: " + lat + ", " + lng);
			UIR.ltlng(lat, lng);
		}
		console.log(lat, lng);
	});
	
};
getGeo();

var getData = function(lat2, long2) {
var key = "/233dc7213cacd6e6";

var apData = "/conditions";

var com = "http://api.wunderground.com/api";

var url = com + key + "/conditions"+ "/q/" + lat2 + "," + long2 +".json";
	//request data
	// build object from data

	var xhr = Ti.Network.createHTTPClient({
		onload : function(e) {
			var json = JSON.parse(this.responseText);
			console.log(json.display_location.city);
				 var weathObj = {
			 	City : json.city,
			 	State : json.state,
			 	Condition: json.weather,
			 	Fahrenheit: json.temp_f,
			 	Celsius: json.temp_c,
			 	WindMph: json.wind_mph,
			 	WindTemp: json.wind_degrees
			 	
			 };
			
			 var uiFile = require("ui");
	         uiFile.buildUi(weathObj);
		},
		onerror : function(e) {
			alert("Error: " + weath.error);
		}
	});
	
	xhr.open("GET", url);
	xhr.send();
	// pass object to UI module
	
};


/**/
exports.getGeo = getGeo;
exports.getData = getData; 