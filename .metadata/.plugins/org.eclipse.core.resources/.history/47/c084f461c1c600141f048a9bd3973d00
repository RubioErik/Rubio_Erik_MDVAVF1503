var buildUI2 = function(obj) {
	csLabel.text = obj.City + ", " + obj.State;
	con.text =  obj.Condition;
	fah.text =  obj.Fahrenheit + " F";
	Cel.text = obj.Celsius + " C";
	wtmLabel.text = "Wind Mph: " + obj.WindMph + " " + " Wind Temp: " + obj.WindTemp;
	
	win.add(mainView);
win.add(fView);
win.add(csView);
win.add(conView);
win.add(celView);
win.add(wtmView);
win.add(fah);
win.add(con);
win.add(csLabel);
win.add(Cel);
win.add(wtmLabel);
win.add(ciView);
	win.open();
	
};

var buildUI = function(dbOutput) {
	for (i=0, j=dbOutput.length; i < j; i++){
		
	var day = Ti.UI.createLabel({
	color: "black",
	top: 20,
	left: 0,
	text: dbOutput[i].title,
	font : {
    fontSize: 14,
    fontStyle: "bold",
    fontFamily: "Helvetica"
}

});
	var fah = Ti.UI.createLabel({
	color: "black",
	left: 0,
	top: 20,
	text: "F: " + dbOutput[i].fah,
	font : {
    fontSize: 14,
    fontStyle: "bold",
    fontFamily: "Helvetica"
}
	
});
	var cel = Ti.UI.createLabel({
	color: "black",
	left: 0,
	top: 20,
	text: "C: " + dbOutput[i].cel,
	font : {
    fontSize: 14,
    fontStyle: "bold",
    fontFamily: "Helvetica"
}
	
});
	var con = Ti.UI.createLabel({
	color: "black",
	left: 0,
	top: 20,
	text: dbOutput[i].con,
	font : {
    fontSize: 14,
    fontStyle: "bold",
    fontFamily: "Helvetica"
   }
});
	var fah2 = Ti.UI.createLabel({
	color: "black",
	left: 0,
	top: 20,
	text: dbOutput[i].fah2,
	font : {
    fontSize: 14,
    fontStyle: "bold",
    fontFamily: "Helvetica"
}
});
	var cel2 = Ti.UI.createLabel({
	color: "black",
	left: 0,
	top: 20,
	text: dbOutput[i].cel2,
	font : {
    fontSize: 14,
    fontStyle: "bold",
    fontFamily: "Helvetica"
}
});
	win2.add(day);
	win2.add(fah);
	win2.add(cel);
	win2.add(con);
	win2.add(fah2);
	win2.add(cel2);
	}
};

var ltlng = function(url) {
console.log(url);
var gps = require("api");
gps.getData(url);
};

exports.ltlng = ltlng;
exports.buildUI = buildUI;
exports.buildUI2 = buildUI2;
